<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TechSaude" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="android:statusBarColor">@color/preto</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="EspacoNav" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:title"></item>
        <item name="android:enabled">false</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="CalendarioHeaderStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/preto</item> <!-- Cor do mês/ano -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalendarioDataStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/preto</item> <!-- Cor dos números -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarioSemanaStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/preto</item> <!-- Cor dos números -->
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Theme.TechSaude" parent="Base.Theme.TechSaude" />
</resources>