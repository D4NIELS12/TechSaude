<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TechSaude" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/cinza</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EspacoNav" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:title"></item>
        <item name="android:enabled">false</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryVariant">#B71C1C</item>
        <item name="colorAccent">#D32F2F</item>

        <!-- Título em vermelho -->
        <item name="android:textColorPrimary">#D32F2F</item>

        <!-- Botões -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#D32F2F</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#555555</item>
    </style>


    <style name="NavDrawerTextStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="CalendarioHeaderStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/preto</item> <!-- Cor do mês/ano -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalendarioDataStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/preto</item> <!-- Cor dos números -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarioSemanaStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/preto</item> <!-- Cor dos números -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.TechSaude" parent="Base.Theme.TechSaude" />

</resources>