<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".AgendaMedica">

    <!-- Botão Voltar -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Voltar"
        android:padding="6dp"
        android:src="@drawable/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/textAgendamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Agendamentos de Hoje"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/textSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confira abaixo os atendimentos marcados para hoje"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAgendamento" />

    <!-- Card de Agendamentos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAgendamentos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/textSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/branco">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TableLayout
                android:id="@+id/tableAgendamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*">

                <!-- Cabeçalho -->
                <TableRow
                    android:background="@color/azulEscuro"
                    android:padding="8dp">

                    <TextView
                        android:text="Paciente"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/branco" />

                    <TextView
                        android:text="Data"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/branco" />

                    <TextView
                        android:text="Hora"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/branco" />
                </TableRow>

                <!-- Exemplo de linha -->
                <TableRow
                    android:padding="10dp"
                    android:background="#F8F8F8">

                    <TextView
                        android:id="@+id/txtNomeExemplo"
                        android:text="João Silva"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/preto" />

                    <TextView
                        android:id="@+id/txtDataExemplo"
                        android:text="04/11/2025"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/preto" />

                    <TextView
                        android:id="@+id/txtHoraExemplo"
                        android:text="14:00"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/preto" />
                </TableRow>

            </TableLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
