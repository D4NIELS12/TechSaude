<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".AlterarSenhaMedico">

    <View
        android:id="@+id/view2"
        android:layout_width="347dp"
        android:layout_height="548dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/recipiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="@id/view2"
        android:gravity="center"
        android:text="Digite sua nova senha"
        android:textColor="@color/branco"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="129dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="109dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/techsaudebranco" />

    <ImageView
        android:id="@+id/imgVoltarAlterar"
        android:layout_width="53dp"
        android:layout_height="59dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="275dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/voltar" />

    <EditText
        android:id="@+id/txtNovaSenhaMedico"
        android:layout_width="250dp"
        android:layout_height="61dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/recipiente_texto"
        android:hint="Nova senha"
        android:password="true"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <Button
        android:id="@+id/btnRecuperarSenhaMedico"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="114dp"
        android:backgroundTint="#FFFFFF"
        android:text="Redefinir"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:strokeColor="#070707"
        app:strokeWidth="3.5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>