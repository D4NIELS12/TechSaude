<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".CadastrarMedico">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="730dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="92dp"
        android:fillViewport="true"
        android:padding="6dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selecionado_nav"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Nome -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgVoltar3"
                    android:layout_width="53dp"
                    android:layout_height="59dp"
                    app:srcCompat="@drawable/voltar" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="37dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/techsaudebranco" />

            </LinearLayout>

            <!-- CPF -->

            <EditText
                android:id="@+id/txtNomeMedico"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu Nome:"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCrmMedico2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu CRM:"
                android:inputType="text"
                android:maxLength="9"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCpfMedico"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu CPF:"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNascMedico"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Data de Nascimento:"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <!-- E-mail -->
            <EditText
                android:id="@+id/txtEmailMedico"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu E-mail:"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdgGenero"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtgenero"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Selecione seu Gênero:"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rdbMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:buttonTint="@color/radio_color"
                    android:text="M"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rdbFeminino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="11dp"
                    android:buttonTint="@color/branco"
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <!-- Data Nascimento -->

            <!-- Senha -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtEspecialidadeMedico"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:endIconMode="dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rdgGenero"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="385dp">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_especialidade"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/recipiente_texto"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:text="Especialidade Médica"
                    android:textAlignment="center"
                    android:textColor="@color/preto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/txtSenhaMedico2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite sua Senha:"
                android:inputType="text|textVisiblePassword"
                android:padding="10dp"
                android:password="true"
                android:textAlignment="center"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTelefoneMedico"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu Telefone:"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="115dp"
                android:backgroundTint="#FFFFFF"
                android:text="Cadastrar"
                android:textColor="#090909"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3"
                app:strokeColor="#070707"
                app:strokeWidth="3.5dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>