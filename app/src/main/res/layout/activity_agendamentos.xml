<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:padding="20dp">

    <!-- ðŸ“… CalendÃ¡rio -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:background="@drawable/edittext_fundo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mcv_arrowColor="@color/azulEscuro"
        app:mcv_dateTextAppearance="@style/CalendarioDataStyle"
        app:mcv_headerTextAppearance="@style/CalendarioHeaderStyle"
        app:mcv_selectionColor="@color/azulEscuro"
        app:mcv_showOtherDates="all"
        app:mcv_tileSize="match_parent"
        app:mcv_weekDayTextAppearance="@style/CalendarioSemanaStyle" />

    <!-- ðŸ”½ Lista de agendamentos -->
    <ScrollView
        android:id="@+id/scrollAgendamentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/containerAgendamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tituloDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Detalhes do Dia"
                android:textColor="@color/azulEscuro"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_fundo"
                android:lineSpacingExtra="4dp"
                android:text="Selecione um dia no calendÃ¡rio para visualizar seus compromissos."
                android:textColor="@color/preto"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
