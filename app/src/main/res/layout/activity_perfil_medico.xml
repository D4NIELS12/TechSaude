<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:padding="16dp"
    tools:context=".PerfilMedico">

    <!-- CARD PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrincipalPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/branco"
        app:cardCornerRadius="22dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Cabeçalho: botão voltar + título -->

            <TextView
                android:id="@+id/txtTituloPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERFIL DO MÉDICO"
                android:textColor="@color/preto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título Dados pessoais -->
            <TextView
                android:id="@+id/tvDadosPessoais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dados Pessoais"
                android:textColor="@color/preto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTituloPerfil" />

            <!-- CARD secundário contendo os dados -->
            <LinearLayout
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_fundo"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDadosPessoais">

                <!-- Nome -->
                <TextView
                    android:id="@+id/tvMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- Data de nascimento -->
                <TextView
                    android:id="@+id/tvNascimentoMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- CPF -->
                <TextView
                    android:id="@+id/tvCpfMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tvEmailMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- CRM -->
                <TextView
                    android:id="@+id/tvCRMValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- Telefone -->
                <TextView
                    android:id="@+id/tvTelefoneMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- Sexo -->
                <TextView
                    android:id="@+id/tvSexoMedicoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

                <!-- Especialidade -->
                <TextView
                    android:id="@+id/tvEspecialidadeMedicaValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="..."
                    android:textColor="@color/preto"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Botão ALTERAR DADOS -->
            <Button
                android:id="@+id/btnAlterarDados"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="@color/azulEscuro"
                android:text="Alterar Dados"
                android:textColor="@color/branco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>