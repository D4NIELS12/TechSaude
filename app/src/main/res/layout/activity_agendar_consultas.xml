<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".AgendarConsultas">

    <!-- ðŸ”™ BotÃ£o Voltar -->
    <ImageView
        android:id="@+id/btnVoltarConsulta"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:contentDescription="Voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

    <!-- ðŸ”¹ Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnVoltarConsulta"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/estetoscopio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/recipienteimagem"
            android:contentDescription="SÃ­mbolo de estetoscÃ³pio"
            app:srcCompat="@drawable/simbolo_estetoscopio" />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Agendar Consultas"
            android:textColor="@color/preto"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Escolha a especialidade, mÃ©dico, data e horÃ¡rio desejado:"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <!-- ðŸ”¹ Especialidade -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEspecialidadeMedico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/recipiente_texto"
        app:boxBackgroundMode="filled"
        app:endIconMode="dropdown_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDescricao">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_especialidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/branco"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Especialidade mÃ©dica"
            android:inputType="none"
            android:minHeight="48dp"
            android:textColor="@color/preto"
            android:textColorHint="@color/preto"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”¹ MÃ©dico -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Medico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/recipiente_texto"
        app:boxBackgroundMode="filled"
        app:endIconMode="dropdown_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEspecialidadeMedico">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/branco"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="MÃ©dico"
            android:inputType="none"
            android:minHeight="48dp"
            android:textColor="@color/preto"
            android:textColorHint="@color/preto"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”¹ Data -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/recipiente_texto"
        android:focusable="false"
        android:hint="Data da consulta"
        android:padding="14dp"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Medico" />

    <!-- ðŸ”¹ HorÃ¡rio -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/recipiente_texto"
        app:boxBackgroundMode="filled"
        app:endIconMode="dropdown_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDate">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/branco"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="HorÃ¡rio da consulta"
            android:inputType="none"
            android:minHeight="48dp"
            android:textColor="@color/preto"
            android:textColorHint="@color/preto"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editPreco"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/recipiente_texto"
        android:clickable="false"
        android:focusable="false"
        android:hint="Valor"
        android:padding="14dp"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time" />

    <!-- ðŸ”¹ BotÃ£o -->
    <Button
        android:id="@+id/btnConfirmarConsulta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:padding="18dp"
        android:backgroundTint="@color/azulEscuro"
        android:text="Confirmar Agendamento"
        android:textColor="@color/branco"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editPreco" />

    <!-- ðŸ”¹ RodapÃ© -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/azulEscuro"
        android:gravity="center|left"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="Logo TechSaÃºde"
            android:src="@drawable/techsaudebranco" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
