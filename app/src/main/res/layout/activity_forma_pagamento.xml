<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".FormaPagamento">

    <!-- Ícone de voltar -->
    <ImageView
        android:id="@+id/imgVoltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

    <!-- Card principal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/branco"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgVoltar"
        app:strokeColor="@color/azulEscuro"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo e título -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/recipienteimagem"
                    android:padding="10dp"
                    app:srcCompat="@drawable/techsaudebranco" />

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Forma de Pagamento"
                    android:textAlignment="center"
                    android:textColor="@color/preto"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Linha separadora -->
            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:background="@color/azulEscuro" />

            <!-- Grupo de opções -->
            <RadioGroup
                android:id="@+id/rgOpcoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPIX"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/azulEscuro"
                    android:gravity="center"
                    android:text="PIX"
                    android:textColor="@color/preto"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbCartao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/azulEscuro"
                    android:gravity="center"
                    android:text="Crédito / Débito"
                    android:textColor="@color/preto"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbDinheiro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/azulEscuro"
                    android:gravity="center"
                    android:text="Dinheiro"
                    android:textColor="@color/preto"
                    android:textSize="16sp" />
            </RadioGroup>


            <!-- Valor -->
            <TextView
                android:id="@+id/txtValorPagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="R$: 00,00"
                android:textColor="@color/preto"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Botão -->
            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/azulEscuro"
                android:elevation="4dp"
                android:letterSpacing="0.05"
                android:text="Confirmar"
                android:textColor="@color/branco"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
