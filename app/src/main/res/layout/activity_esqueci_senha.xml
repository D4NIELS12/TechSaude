<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".EsqueciSenha">

    <View
        android:id="@+id/view2"
        android:layout_width="347dp"
        android:layout_height="548dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/recipiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecuperar"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="114dp"
        android:backgroundTint="#FFFFFF"
        android:text="Cadastrar"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:strokeColor="#070707"
        app:strokeWidth="3.5dp" />

    <EditText
        android:id="@+id/txtCpfEsqueci"
        android:layout_width="218dp"
        android:layout_height="61dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/recipiente_texto"
        android:hint="@string/txtCpfPaciente"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <EditText
        android:id="@+id/txtNovaSenha"
        android:layout_width="218dp"
        android:layout_height="61dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/recipiente_texto"
        android:ems="10"
        android:hint="@string/txtNovaSenha"
        android:inputType="text"
        android:password="true"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="129dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="109dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/techsaudebranco" />

    <ImageView
        android:id="@+id/imgVoltarEsqueci"
        android:layout_width="53dp"
        android:layout_height="59dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="275dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/voltar" />

</androidx.constraintlayout.widget.ConstraintLayout>