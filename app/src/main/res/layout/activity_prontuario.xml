<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProntuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:padding="20dp"
    tools:context=".Prontuario"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Card de informações básicas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações Básicas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Peso -->
                <EditText
                    android:id="@+id/editPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_fundo"
                    android:hint="Peso (kg)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Altura -->
                <EditText
                    android:id="@+id/editAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:hint="Altura (cm)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card de sintomas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sintomas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Sintomas -->
                <EditText
                    android:id="@+id/editSintomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:gravity="top"
                    android:hint="Descreva os sintomas"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card de alergias -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alergias"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Alergias -->
                <EditText
                    android:id="@+id/editAlergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:gravity="top"
                    android:hint="Liste as alergias"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card das condições crônicas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condições Crônicas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Diabetes -->
                <CheckBox
                    android:id="@+id/checkDiabetes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Diabetes"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Hipertensão -->
                <CheckBox
                    android:id="@+id/checkHipertensao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Hipertensão"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Asma -->
                <CheckBox
                    android:id="@+id/checkAsma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Asma"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Colesterol Alto -->
                <CheckBox
                    android:id="@+id/checkColesterol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Colesterol Alto"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Obesidade -->
                <CheckBox
                    android:id="@+id/checkObesidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Obesidade"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp" />

                <!-- Nenhuma -->
                <CheckBox
                    android:id="@+id/checkNenhuma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:buttonTint="@color/azulEscuro"
                    android:text="Nenhuma das opções"
                    android:textColor="#F06E6C6C"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card das Observações -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observações"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Observações -->
                <EditText
                    android:id="@+id/editObservacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:gravity="top"
                    android:hint="Informações adicionais"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card dos Alertas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alertas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Alertas -->
                <EditText
                    android:id="@+id/editAlertas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:gravity="top"
                    android:hint="Informe alertas importantes"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textColorHint="#F06E6C6C"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botão de salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvarProntuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Prontuário"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/azulEscuro"
            android:textColor="@color/branco"
            app:cornerRadius="14dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
