            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="InformaÃ§Ãµes BÃ¡sicas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_fundo"
                    android:hint="Peso (kg)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_fundo"
                    android:hint="Altura (cm)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ Card de sintomas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sintomas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editSintomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descreva os sintomas"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top"
                    android:background="@drawable/edittext_fundo"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ Card de alergias -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alergias"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editAlergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Liste as alergias"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:gravity="top"
                    android:background="@drawable/edittext_fundo"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ Card das condiÃ§Ãµes crÃ´nicas -->
