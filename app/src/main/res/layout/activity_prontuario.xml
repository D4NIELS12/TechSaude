            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CondiÃ§Ãµes CrÃ´nicas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/checkDiabetes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diabetes"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"/>

                <CheckBox
                    android:id="@+id/checkHipertensao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HipertensÃ£o"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"/>

                <CheckBox
                    android:id="@+id/checkAsma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asma"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"/>

                <CheckBox
                    android:id="@+id/checkColesterol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colesterol Alto"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"/>

                <CheckBox
                    android:id="@+id/checkObesidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obesidade"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"/>

                <CheckBox
                    android:id="@+id/checkNenhuma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nenhuma das opÃ§Ãµes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:buttonTint="@color/azulEscuro"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ ObservaÃ§Ãµes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ObservaÃ§Ãµes"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editObservacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="InformaÃ§Ãµes adicionais"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top"
                    android:background="@drawable/edittext_fundo"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ Alertas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alertas"
                    android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editAlertas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Informe alertas importantes"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:gravity="top"
                    android:background="@drawable/edittext_fundo"
                    android:padding="10dp"
                    android:textColor="@color/preto"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¹ BotÃ£o de salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvarProntuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar ProntuÃ¡rio"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/azulEscuro"
            android:textColor="@color/branco"
            app:cornerRadius="14dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
