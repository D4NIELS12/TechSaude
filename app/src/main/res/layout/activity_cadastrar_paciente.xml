<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".CadastrarPaciente">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="730dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="92dp"
        android:fillViewport="true"
        android:padding="6dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selecionado_nav"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Nome -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgVoltar3"
                    android:layout_width="53dp"
                    android:layout_height="59dp"
                    app:srcCompat="@drawable/voltar" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="37dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/techsaudebranco" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtCpfCadastrarPaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu CPF:"
                android:inputType="number"
                android:maxLength="14"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNomePaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu Nome:"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <!-- CPF -->

            <EditText
                android:id="@+id/txtEmailPaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu E-mail:"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <!-- E-mail -->
            <EditText
                android:id="@+id/txtSenhaPaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite sua Senha:"
                android:inputType="text|textPassword"
                android:padding="10dp"
                android:password="true"
                android:textAlignment="center"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <!-- Data Nascimento -->
            <EditText
                android:id="@+id/txtTelefonePaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Digite seu Telefone:"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <!-- Senha -->
            <EditText
                android:id="@+id/txtNascPaciente"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recipiente_texto"
                android:hint="Data de Nascimento:"
                android:inputType="date"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtCEPPaciente"
                    android:layout_width="245dp"
                    android:layout_height="52dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/recipiente_texto"
                    android:hint="Digite seu CEP:"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/preto"
                    android:textColorHint="@color/preto"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBuscarCep"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/branco"
                    android:insetRight="10dp"
                    android:paddingVertical="10dp"
                    android:paddingLeft="36dp"
                    android:text="."
                    android:textColor="@color/preto"
                    android:textStyle="bold"
                    app:icon="@drawable/lupa"
                    app:iconGravity="textStart"
                    app:iconSize="25dp"
                    app:iconTint="@color/preto"
                    app:strokeColor="@color/preto"
                    app:strokeWidth="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtRua"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recipiente_prontuario"
                    android:hint="Rua"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/preto"
                    android:textColorHint="@color/preto"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtNumero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/recipiente_texto"
                        android:hint="Número"
                        android:textColor="@color/preto"
                        android:textColorHint="@color/preto"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/txtBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Bairro"
                android:background="@drawable/recipiente_texto"
                android:minHeight="48dp"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Cidade"
                android:background="@drawable/recipiente_texto"
                android:minHeight="48dp"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="UF"
                android:background="@drawable/recipiente_texto"
                android:minHeight="48dp"
                android:textColor="@color/preto"
                android:textColorHint="@color/preto"
                android:textStyle="bold"  />

            <RadioGroup
                android:id="@+id/rdgGenero"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtgenero"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Selecione seu Gênero:"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rdbMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:buttonTint="@color/radio_color"
                    android:text="M"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rdbFeminino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="11dp"
                    android:buttonTint="@color/branco"
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="115dp"
                android:backgroundTint="#FFFFFF"
                android:text="Cadastrar"
                android:textColor="#090909"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3"
                app:strokeColor="#070707"
                app:strokeWidth="3.5dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>